{% extends "AprendizajeBundle:Default:index.html.twig" %}

{% block content %}
<div class="col-lg-12">
              <div class="nav-tabs-custom">
                  <div class="tab-pane active" id="tab_1">


<div class="box box-primary">
                <div class="box-header with-border">
                  <h3 class="box-title">Agregar Sub-Categoria</h3>
                </div><!-- /.box-header -->
                
                {% for flashMessage in app.session.flashbag.get('message') %}

                  <div class="alert alert-success">
                      {{ flashMessage }}
                  </div>

                {% endfor %}
                <!-- form start -->
                <form role="form" method='post' action="{{path('aprendizaje_admin_categoria_agregar_sub')}}">
                  <div class="box-body">
                    <div class="form-group">
                      <label for="exampleInputPassword1">Seleccionar Categoria</label>
                        {{ form_widget(form.parentId, {'attr': {'class': 'form-control', 'placeholder':'Categoria'}}) }}
                    </div>
                    <div class="form-group">
                      <label for="exampleInputPassword1">Nombre Subcategoria</label>
                        {{ form_widget(form.nombre, {'attr': {'class': 'form-control', 'placeholder':'Categoria'}}) }}
                    </div>
                  </div><!-- /.box-body -->

                  <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Enviar</button>
                  </div>
                  {{ form_row(form._token) }}
                </form>
              </div>


                  </div><!-- /.tab-pane -->
              </div><!-- nav-tabs-custom -->
            </div>
{% endblock content %}

